local Camera = workspace.CurrentCamera
local parts = {}
print("c0")

local t = 0.15
task.spawn(function()
	while wait() do
		local hue = tick() % t/t
		local color = Color3.fromHSV(hue,1,1)
		for i,v in parts do
			if v then
				v.Color = color
			else
				v:Destroy()
			end
		end
	end
end)

game.Workspace:WaitForChild("Flag").DescendantAdded:Connect(function(descendant)
	wait()
	if descendant.Name == "FlagBlanc" then
		for i,v in descendant:GetChildren() do
			if v.Name == "Part" and v:IsA("Part") then
				table.insert(parts, v)
			end
		end
	end
end)
